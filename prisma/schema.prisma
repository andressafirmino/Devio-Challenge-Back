// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id          Int              @id @default(autoincrement())
  amount      Int
  payment     String
  client      String
  isFinished  Boolean
  code        String
  products    OrderedProduct[]
}

model Product {
  id             Int              @id @default(autoincrement())
  name           String
  price          Int
  description    String
  image          String
  category       String
  OrderedProduct OrderedProduct[]
}

model OrderedProduct {
  id         Int               @id @default(autoincrement())
  product    Product           @relation(fields: [productId], references: [id])
  productId  Int
  order      Order             @relation(fields: [orderId], references: [id])
  orderId    Int
  observation String?
  sideDishes SideDishesOrder[]
}

model SideDishe {
  id              Int               @id @default(autoincrement())
  name            String
  price           Int
  description     String
  image           String
  sideDishesOrder SideDishesOrder[]
}

model SideDishesOrder {
  id               Int            @id @default(autoincrement())
  orderedProductId Int
  sideDishesId     Int
  quantity         Int
  orderedProduct   OrderedProduct @relation(fields: [orderedProductId], references: [id])
  sideDish         SideDishe      @relation(fields: [sideDishesId], references: [id])
}

model Categories {
  id       Int    @id @default(autoincrement())
  name     String
  image    String
  category String
}
